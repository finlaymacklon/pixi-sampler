{
  "manifest_version": 3,
  "name": "Pixi Exposer",
  "version": "0.2.0",
  "description": "Exposes the <canvas> objects representation (COR) of PixiJS (i.e., the PIXI scene graph) to enable testing of PixiJS-based applications.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Pixi Exposer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources" : [
    {
      "resources": [ "inject.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}